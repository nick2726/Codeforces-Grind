Problem Link:https://codeforces.com/problemset/problem/1033/B

Solution:

#include <bits/stdc++.h>

using namespace std;
bool isPrime(long long x) {
    if (x == 1)
        return false;
    for (long long d = 2; d * d <= x; d++) {
        if (x % d == 0)
            return false;
    }
    return true;
}
void solve() {
    long long a, b;
    cin >> a >> b;
    if ((a - b == 1) && (isPrime(a + b)))
        cout << "Yes\n";
    else
        cout << "No\n";
}

int main() {
    // your code goes here
    long long t;
    cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}
